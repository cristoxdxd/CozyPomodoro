{
  "manifest_version": 3,
  "name": "CozyPomodoro",
  "version": "1.0.0",
  "description": "A simple Pomodoro timer Chrome extension with sound notifications for automatic break and work cycles",
  "permissions": [
    "notifications",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CozyPomodoro"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}